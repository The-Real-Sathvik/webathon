{
  "servers": {
    "figma-mcp-server": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "figma-developer-mcp",
        "--figma-api-key=${input:figma-access-token}",
		"--stdio"
      ]
    }
  },
  "inputs": [
    {
      "type": "promptString",
      "id": "figma-access-token",
      "description": "Figma token",
      "password": true
    }
  ]
}